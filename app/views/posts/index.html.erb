<h1>Public Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Posted By:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.name %></td>
    <% end %>
  </tbody>
</table>
</br>
